page {
  background: #f9f9f9;
}

.coupon-content {
  width: 100%;
  position: relative;
}

.fixed {
  z-index: 2;
  position: fixed;
  top: 0;
  left: 0;
  background: #fff;
}

.coupon-type {
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #efefef;
  width: 100%;
}

.is-use-coupon {
  border-bottom: 2rpx solid #efefef;
  border-top: 2rpx solid #efefef;
  width: 100%;
  height: 80rpx;
  padding: 0 56rpx;
}

.is-use-coupon image, .is-use-coupon-text-2 {
  width: 36rpx;
  height: 36rpx;
}

.is-use-coupon .is-use-coupon-text-1 {
  font-size: 24rpx;
  color: #3d3d3d;
}

.is-use-coupon text:last-child {
  border: 2rpx solid #d8d8d8;
  border-radius: 50%;
}

.coupon-block {
  flex: 1;
  width: 100%;
  -webkit-overflow-scrolling: touch;
  padding-bottom: 32rpx;
  position: absolute;
  top: 80rpx;
  left: 0;
}

.coupon-type text {
  flex: 1;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 24rpx;
  color: #262626;
}

.coupon-type text.choise-type {
  color: #00c6ca;
  font-size: 28rpx;
  font-weight: bold;
}

.coupon-item {
  background: #fff;
  width: 686rpx;
  margin: 0 auto;
  margin-top: 32rpx;
  background: #fff;
  box-shadow: 0 0 12rpx 0 rgba(0, 0, 0, 0.10);
  border-radius: 8rpx;
}

.up {
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
  height: 200rpx;
  width: 100%;
  background-size: cover;
  background-repeat: no-repeat;
  display: flex;
  align-items: center;
}

.type-bg-0 {
  background-image: url('https://h5.1byongche.com/weChatImgs/hcd-coupon.png');
}

.type-bg-1, .type-bg-2 {
  background-image: url('https://h5.1byongche.com/weChatImgs/hcd-coupon-disable.png');
}

.bottom {
  text-indent: 50rpx;
  font-size: 24rpx;
  color: #3d3d3d;
  padding: 20rpx 0 20rpx 20rpx;
}

.left {
  width: 216rpx;
  flex: 0 1 216rpx;
  height: 106rpx;
  font-size: 68rpx;
  color: #fff;
  font-weight: bold;
  text-align: center;
  line-height: 106rpx;
  border-right: 2rpx dashed #fff;
}

.left::after {
  font-size: 36rpx;
  font-weight: normal;
}

.zhe::after {
  content: '折';
}

.yuan::after {
  content: '元';
}

.right {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  /* padding: 32rpx 20rpx; */
  padding: 32rpx 15rpx 32rpx 32rpx;
  max-width: 500rpx;
}

.right-width {
  max-width: 405rpx;
}

image {
  width: 40rpx;
  height: 40rpx;
}

.right text {
  color: #fff;
}

.name {
  font-size: 32rpx;
}

.time, .explain {
  font-size: 20rpx;
}

.no-data {
  margin: auto;
  position: absolute;
  top: 300rpx;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
