.search-content {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  z-index: 999;
  padding: 0 40rpx;
}

.search-content view {
  width: 594rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
  background: #f8f8f9;
  border-radius: 200rpx;
}

.search-content view icon {
  padding-left: 36rpx;
  margin-right: 12rpx;
}

.search-content view input {
  flex: 1;
  font-size: 24rpx;
}

.search-content text {
  font-size: 28rpx;
  color: #000;
}

.history-content {
  transform: translateY(95rpx);
  z-index: -1;
  overflow: hidden;
}

.history-item {
  padding: 0 42rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.history-item view {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.history-item view view {
  display: flex;
  align-items: flex-start;
  flex-direction: column;
  justify-content: space-between;
  padding: 24rpx 0;
}

.history-item view view text {
  line-height: 40rpx;
  font-size: 28rpx;
  color: #262626;
  max-width: 610rpx;
}

.history-item view view text:last-child {
  font-size: 22rpx;
  color: #9b9b9b;
}

image {
  width: 32rpx;
  height: 40rpx;
  margin-right: 30rpx;
}

.no-data {
  color: #999;
  font-size: 26rpx;
  display: block;
  text-align: center;
}

.placeholder-class {
  color: #a1a1a1;
  font-size: 24rpx;
}
