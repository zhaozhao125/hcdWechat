page {
  width: 100%;
  height: 100%;
  border-top: 2rpx solid #efefef;
}

swiper {
  margin-top: 40rpx;
  margin-bottom: 32rpx;
  height: 360rpx;
}

.car-image {
  width: 100%;
  height: 240rpx;
}

.type-tip {
  text-align: center;
  font-size: 32rpx;
  color: #3d3d3d;
  margin: 4rpx 0 10rpx;
}

.type-tip :first-child ::after {
  content: '';
  display: inline-block;
  margin: 0 8rpx;
  width: 8rpx;
  height: 8rpx;
  vertical-align: middle;
  border-radius: 50%;
  background: #7a7a7a;
}

.charge-content {
  margin: 40rpx auto 0;
  margin-top: 40rpx;
  width: 81%;
  padding:46rpx 0;
  display: flex;
  flex-direction: column;
  align-self: center;
  justify-content: center;
  border-top: 2rpx solid rgba(231, 231, 231, 0.7);
  border-bottom: 2rpx solid rgba(231, 231, 231, 0.7);
}

.charge-detail {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #3d3d3d;
  margin-bottom: 18rpx;
}
.charge-detail:last-of-type{
  margin-bottom: 0;
}

.bottom-tip{
  margin-top: 30rpx;
}

.bottom-tip text {
  margin: 0 auto;
  display: block;
  width: 81%;
  font-size: 24rpx;
  color: #3d3d3d;
  opacity: 0.6;
}