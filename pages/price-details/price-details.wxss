.price-dtatils {
  width: 100%;
  border-top: 2rpx solid rgba(231, 231, 231, 0.5);
  padding-left: 36rpx;
}

.item {
  display: flex;
  padding: 25rpx 0;
  border-bottom: 2rpx solid rgba(231, 231, 231, 0.5);
  position: relative;
}

.item-view {
  display: flex;
  flex-direction: column;
  justify-content: space-betweenl;
}

.item>text {
  background-image: linear-gradient(-270deg, #00c6ca 0%, #1cdf98 100%);
  border-radius: 4rpx;
  width: 36rpx;
  height: 36rpx;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  line-height: 36rpx;
  margin-right: 36rpx;
}

.item view>text:first-child {
  font-size: 28rpx;
  color: #262626;
}

.item view>text:nth-child(2) {
  font-size: 40rpx;
  color: #00c6ca;
  font-weight: bold;
}

.item view>text:nth-child(2)::after {
  content: '元/度';
  font-size: 24rpx;
  color: #9b9b9b;
  font-weight: normal;
}

.item view>text:last-child {
  font-size: 24rpx;
  color: #9b9b9b;
}

image {
  position: absolute;
  top: 0;
  right: 0;
  width: 84rpx;
  height: 84rpx;
}
