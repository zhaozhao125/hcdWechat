@import './../wxss/publice.wxss';

.code-container {
  display: flex;
  justify-content: space-between;
  width: 100%;
  background: #fff;
  padding-left: 40rpx;
  padding-right: 40rpx;
  box-shadow: 0 2px 4px 0 rgba(218, 218, 218, 0.50);
  flex-direction: column;
  margin-bottom: 20rpx;
}

.get-container {
  height: 88rpx;
  border-bottom: 2rpx solid #e5e5e5;
}

.get-tel {
  font-size: 32rpx;
  color: #3d3d3d;
}

.send-code {
  font-size: 28rpx;
  color: #3a68b8;
}

.code-input {
  height: 88rpx;
}

.protocol {
  margin-top: 18rpx;
  opacity: 0.6;
  font-size: 22rpx;
  color: #3d3d3d;
}

.protocol-tip {
  font-weight: bold;
  color: #00c6ca;
}

.get-time {
  opacity: 0.5;
  font-size: 32rpx;
  color: #3d3d3d;
}

.invite-input {
  background: #fff;
  width: 100%;
  padding: 0 40rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2px 8rpx 0 rgba(218, 218, 218, 0.50);
}

.invite-input input {
  width: 100%;
}
button{
  margin-top:68rpx;

}
